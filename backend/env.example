# 数据库配置
DATABASE_URL=sqlite:///./water_quality.db
DATABASE_ECHO=false

# API 配置
API_V1_STR=/api/v1
PROJECT_NAME=Water Quality Management System
PROJECT_VERSION=1.0.0
DESCRIPTION=Enterprise-grade water quality data management system
DEBUG=true

# 安全配置
SECRET_KEY=your-secret-key-here-change-in-production-please-use-a-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 管理员配置
ADMIN_EMAIL=admin@waterquality.com
ADMIN_PASSWORD=admin123

# CORS 配置
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5173"]

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT="{time} | {level} | {message}"
LOG_RETENTION=30

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100 